<div class="d-flex align-items-center justify-content-between mb-4">
  <div>
    <h1 class="h3 mb-1"><%= @list.name %></h1>
    <p class="text-muted mb-0"><%= pluralize(@list.movies.count, 'film') %> • <%= pluralize(@list.bookmarks.count, 'bookmark') %></p>
  </div>

  <div class="d-flex gap-2">
    <%= link_to 'Retour aux listes', lists_path, class: 'btn btn-outline-secondary' %>
    <%= link_to 'Ajouter un film', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
  </div>
</div>

<div class="row g-3">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-12 col-sm-6 col-md-4">
      <div class="movie-card h-100">
        <div class="poster-wrap">
          <% if bookmark.movie.poster_url.present? %>
            <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: 'poster' %>
          <% else %>
            <div class="poster placeholder">No image</div>
          <% end %>

          <div class="rating-badge">⭐ <span class="rating-value"><%= bookmark.movie.rating %></span></div>
        </div>

        <div class="movie-info mt-2">
          <h2><%= link_to bookmark.movie.title, movie_path(bookmark.movie), class: 'text-dark' %></h2>
        </div>

        <p class="mt-2 text-muted"><%= truncate(bookmark.movie.overview, length: 140) %></p>
        <% if bookmark.comment.present? %>
          <p class="mt-2 small text-muted">Commentaire: <%= bookmark.comment %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
