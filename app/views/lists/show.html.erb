

<h1>Detail de la liste</h1>
<p>Nom de la liste: <%= @list.name %></p>
<h2>Films dans cette liste:</h2>

<div class="movie-list d-flex flex-wrap gap-4">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="movie-card">
      <div class="poster-wrap">
        <% if bookmark.movie.poster_url.present? %>
          <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: 'poster' %>
        <% else %>
          <div class="poster placeholder">No image</div>
        <% end %>

        <div class="rating-badge">
          â­ <span class="rating-value"><%= bookmark.movie.rating %></span>
        </div>
      </div>

      <div class="movie-info mt-2">
        <h2><%= bookmark.movie.title %></h2>
      </div>

      <p class="mt-2 text-muted"><%= truncate(bookmark.movie.overview, length: 140) %></p>
      <p><%= bookmark.comment %></p>
    </div>
  <% end %>
</div>


